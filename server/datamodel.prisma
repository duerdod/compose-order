  type Product {
    id: ID! @id @unique
    productName: String!
    brand: String!
    productType: Int!
    description: String!
    price: Int!
    image: [String] @scalarList(strategy: RELATION)
  }

  type CartItem {
    id: ID! @id @unique
    quantity: Int! 
    product: Product 
  }

  type Cart {
    id: ID! @id @unique
    products: [CartItem]! @scalarList(strategy: RELATION)
  }
