  type Product {
    id: ID! @id @unique
    productName: String!
    brand: String!
    productType: Int!
    description: String!
    price: Int!
    image: String
    cartItem: [CartItem]!
  }

  type Cart {
    id: ID! @id @unique
    createdAt: DateTime! @createdAt
    cartItem: [CartItem!]!
  }

  type CartItem {
    id: ID! @id @unique
    cart: Cart!
    quantity: Int!
    product: Product! 
  }

  input CartItemInput {
    id: String!
    price: Int!
    quantity: Int! @default(value: "1")
  }